
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="icon" type="image/x-icon" href="{{ asset('Images/Ball.ico') }}">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MatchMate</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('styles3.css') }}">

    <!-- Include SweetAlert CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.2/sweetalert.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11">
</head>
<body>

<nav class="navbar">
    <div class="navbar-logo">
        <img src="{{ asset('Images/logo.png') }}" alt="Logo">
    </div>
    <ul class="navbar-items">
        <li><a href="{{ path('app_home') }}">Home</a></li>
        <li><a href="#">Reservation</a></li>
        <li><a href="#">Events</a></li>
        <li><a href="#">Shop</a></li>
        <li><a href="#">Claim</a></li>
    </ul>
    <div class="navbar-icons">
        <img src="{{ asset('Images/panier.png') }}" alt="panier">
        <img src="{{ asset('Images/utilisateur (1).png') }}" alt="utilisateur">
    </div>
</nav>

<section >
    <div class="container py-5">
        <div class="column ">
            <div class="col-md-8">
                            <div class="card  ">
                                <div class="card-header py-3">
                                    <h5 class="mb-0">Cart - {{ carts|length }} items</h5>
                                </div>
                                <div class="card-body">
                                    {% for cart in carts %}
                                        <div class="row justify-content-center ">
                                            <div class="col-lg-3 col-md-12">
                                                {% if cart.getidproduct.image %}
                                                    <div >
                                                        <img src="{{ asset('uploads/images/' ~ cart.getidproduct.image) }}"
                                                            class="product-image" alt="Image Product {{ cart.getidproduct.name }}">
                                                        
                                                    </div>
                                                {% else %}
                                                    Pas d'image associ√©e
                                                {% endif %}
                                            </div>

                                            <div class="col-lg-5 col-md-6">
                                                <p><strong>{{ cart.getidproduct.name }}</strong></p>
                                                <p>Reference: {{ cart.getidproduct.reference }}</p>
                                                <p>Price: ${{ cart.getidproduct.price }}</p>
                                                <button type="button" class="btn btn-primary btn-sm me-1 mb-2">
                                                    <i class="fas fa-trash"></i> 
                                                </button>
                                                <button type="button" class="btn btn-danger btn-sm mb-2">
                                                    <i class="fas fa-heart"></i> 
                                                </button>
                                            </div>

                                            <!--Quantity-->

                                        <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
                                                <div class="d-flex mb-4" style="max-width: 400px">
                                                
                                                    <form action="{{ path('update_quantity', {'id': cart.id}) }}" method="post">
                                                        <div data-mdb-input-init class="form-outline">
                                                                <input id="form1" min="0" name="quantity" value="{{ cart.quantity }}" type="number" class="form-control" />
                                                                
                                                        </div>
                                                        <button type="submit" class="btn btn-success mt-2">Update</button>
                                                    </form>
                                                
                                                </div>

                                                <div >
                                                <select name="size" id="size-{{ cart.id }}" style="width:100px">
                                                    <option value="small" {% if cart.size == 'small' %} selected {% endif %}>Small</option>
                                                    <option value="medium" {% if cart.size == 'medium' %} selected {% endif %}>Medium</option>
                                                    <option value="large" {% if cart.size == 'large' %} selected {% endif %}>Large</option>
                                                </select>

                                                </div>

                                                <br>
                                                <p class="text-start text-md-center"><strong>Total: ${{ cart.priceTotal }}</strong></p>
                                            </div>


                                            
                                            </div>
                                        </div>
                                    {% else %}
                                        <p>No items in the cart</p>
                                    {% endfor %}
                                </div>

                             </div>
            </div>

                <div class="col-md-4">
                    <div class="card1 mb-4">
                        <div class="card-header py-3">
                            <h5 class="mb-0">Summary</h5>
                        </div>
                        <div class="card-body">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                                    Total Amount
                                    <span id="total-amount">
                                        {% set total = 0 %}
                                        {% for cart in carts %}
                                            {% set total = total + cart.priceTotal %}
                                        {% endfor %}
                                        ${{ total }}
                                    </span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                    Promo Code
                                    <input type="text" id="promo-code" class="form-control">
                                    <button type="button" id="apply-promo-btn" class="btn btn-primary" onclick="applyPromoCode()">Apply</button>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                                    <div>
                                        <strong>Final amount</strong>
                                        <strong>
                                            <p class="mb-0"></p>
                                        </strong>
                                    </div>
                                    <span id="final-amount"><strong></strong></span>
                                </li>
                            </ul>
                            <a href="{{ path('app_payment_cart_new') }}" id="checkout-btn" type="button" class="btn btn-primary btn-lg btn-block">Go to checkout</a>
                            <br>
                            <a href="{{ path('generate_cart_pdf') }}" class="btn btn-primary">Generate PDF</a>
                        </div>
                    </div>
                </div>
                

                

    </div>


            
        
</section>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.4.0/jspdf.umd.min.js"></script>
<!-- Include SweetAlert JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.2/sweetalert.min.js"></script>
 <script>
    function applyPromoCode() {
    var promoCode = document.getElementById('promo-code').value;
    // Call the promo code validation function
    if (promoCodeValidation(promoCode)) {
        // Promo code is valid
        // Calculate discount and update final amount
        var total = parseFloat(document.getElementById('total-amount').innerText.replace('$', ''));
        var discount = 100; // Example discount amount
        var finalAmount = total - discount; // Apply discount
        document.getElementById('final-amount').innerText = '$' + finalAmount.toFixed(2);

        // Show success message using SweetAlert
        swal("Success", "Promo code applied successfully!", "success");
    } else {
        // Promo code is invalid
        // Show error message using SweetAlert
        swal("Error", "Invalid promo code! Please try again.", "error");
    }
}


   function promoCodeValidation(promoCode) {
        // Add your promo code validation logic here
        return promoCode === 'matchmate01!';
    }

    function generatePDF() {
    var doc = new jsPDF();
    // Add content to the PDF document
    doc.text(20, 20, 'Cart Information:');
    // Add more content as needed
    // Save the PDF
    doc.save('cart_information.pdf');

    document.getElementById('checkout-btn').addEventListener('click', generatePDF);

}


</script>
</body>
</head>
</html>
