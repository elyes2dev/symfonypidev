    {% block stylesheets %}
    <style>
    /* Add custom styles for sticky navbar */
    .navbar {
      position: fixed;
      width: 96%;
      top: 0;
      z-index: 1000;
      transition: top 0.3s;
    }

    .navbar-scroll {
      top: -100px; /* Adjust this value as needed */
    }

    /* Add custom styles for responsive navbar */
    @media (max-width: 768px) {
      .navbar-items {
        display: none;
        position: absolute;
        top: 60px; /* Adjust this value as needed */
        background-color: #f9f9f9;
        width: 100%;
        text-align: center;
      }

      .navbar-items.show {
        display: block;
      }

      .navbar-icons {
        display: none;
      }

      .navbar .navbar-logo {
        text-align: center;
        width: 100%;
      }

      .navbar .navbar-logo img {
        margin-left: auto;
        margin-right: auto;
        display: block;
      }
    }
  </style>
    
    
    
    {% endblock %}
            {{ encore_entry_link_tags('app') }}
</head>
