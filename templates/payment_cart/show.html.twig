{% extends 'base.html.twig' %}

{% block title %}PaymentCart{% endblock %}

{% block body %}
    <h1>PaymentCart</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ payment_cart.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ payment_cart.name }}</td>
            </tr>
            <tr>
                <th>CardNum</th>
                <td>{{ payment_cart.cardNum }}</td>
            </tr>
            <tr>
                <th>ExpirationDate</th>
                <td>{{ payment_cart.expirationDate ? payment_cart.expirationDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Cvv</th>
                <td>{{ payment_cart.cvv }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_payment_cart_index') }}">back to list</a>

    <a href="{{ path('app_payment_cart_edit', {'id': payment_cart.id}) }}">edit</a>

    {{ include('payment_cart/_delete_form.html.twig') }}
{% endblock %}
