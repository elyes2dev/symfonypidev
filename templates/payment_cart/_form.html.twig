                                    <form id="myForm" action="" class="payment-form">
    <div class="row">
        <div class="col-12">
            <div class="d-flex flex-column px-md-5 px-4 mb-4">
                {{ form_label(form.name, 'Name') }}
                <div class="inputWithIcon">
                    {{ form_widget(form.name, {'attr': {'class': 'form-control text-uppercase', 'placeholder': 'Enter cardholder name'}}) }}
                    <span class="far fa-user"></span>
                </div>
            </div>
        </div>
        <div class="col-12">
            <div class="d-flex flex-column px-md-5 px-4 mb-4">
                {{ form_label(form.cardNum, 'Card Number') }}
                <div class="inputWithIcon">
                    {{ form_widget(form.cardNum, {'attr': {'class': 'form-control', 'placeholder': 'Enter card number'}}) }}
                    <span><img src="https://www.freepnglogos.com/uploads/mastercard-png/mastercard-logo-logok-15.png" alt=""></span>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="d-flex flex-column ps-md-5 px-md-0 px-4 mb-4">
                {{ form_label(form.expirationDate, 'Expiration Date') }}
                <div class="inputWithIcon">
                    {{ form_widget(form.expirationDate, {'attr': {'class': 'form-control ', 'placeholder': 'MM/YYYY'}}) }}
                    <span class="fas fa-calendar-alt"></span>
                </div>
            </div> 

        </div>
        <div class="col-md-6">
