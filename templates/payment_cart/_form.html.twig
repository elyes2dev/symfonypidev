                    {{ form_widget(form.cvv, {'attr': {'class': 'form-control', 'placeholder': 'Enter CVV'}}) }}
                    <span class="fas fa-lock"></span>
                </div>
            </div>
        </div>
        <div class="col-12 px-md-5 px-4 mt-3">
            <button type="submit" class="btn btn-primary w-100" id="submitBtn">{{ button_label|default('Validate') }}</button>
        </div>
    </div>
</form>

<script>
    // Add event listener to the submit button
    document.getElementById('submitBtn').addEventListener('click', function(event) {
        // Prevent the default form submission
        event.preventDefault();

        // Trigger SweetAlert for payment confirmation
        swal({
            title: "Payment Successful",
            text: "Your payment has been successfully processed.",
            icon: "success",
            button: "OK",
        })
        .then(() => {
            // Redirect to the home page
             window.location.href="{{ path('app_home') }}"; // Replace "/" with the URL of your home page if needed
        });
    });
</script>



