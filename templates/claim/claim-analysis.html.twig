<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Claims Analysis</title>
    <!-- Inclure la bibliothèque Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <!-- Canvas pour afficher le graphique -->
    <canvas id="claimChart" width="400" height="400"></canvas>

    <script>
        // Collecte des données pour l'analyse
        const allClaims = [
            { type: "site" },
            { type: "store" },
            { type: "site" },
            { type: "reservation" },
            { type: "store" },
            // Ajoutez plus de réclamations au besoin
        ];

        let siteCount = 0;
        let storeCount = 0;
        let reservationCount = 0;

        allClaims.forEach(claim => {
            if (claim.type === "site") {
                siteCount++;
            } else if (claim.type === "store") {
                storeCount++;
            } else if (claim.type === "reservation") {
                reservationCount++;
            }
        });

        // Création des données pour le graphique
        const data = {
            labels: ["Site", "Store", "Reservation"],
            datasets: [{
                label: "Claims by Type",
                backgroundColor: ["#ff9999", "#99ff99", "#9999ff"],
                data: [siteCount, storeCount, reservationCount]
            }]
        };

        // Configuration du graphique
        const config = {
            type: 'pie',
            data: data,
        };

        // Création du graphique
        const ctx = document.getElementById('claimChart').getContext('2d');
        const claimChart = new Chart(ctx, config);
    </script>
</body>
</html>
