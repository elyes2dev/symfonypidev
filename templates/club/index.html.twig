        transition: bottom .4s ease-out, color .2s ease-out;
    }

    .portfolio-thumb:hover .project-title {
        bottom: 0;
        -webkit-transition: bottom .3s ease-out .1s, color .2s ease-out 0s;
        transition: bottom .3s ease-out .1s, color .2s ease-out 0s;
    }

