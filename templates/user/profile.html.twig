{% extends 'dashboard/dashboard.html.twig'%} 

{% block content %}

   
            
            <!-- Additional styles -->
            <style>
                /* Custom styles */
                .profile-picture {
                    width: 150px;
                    height: 150px;
                    border-radius: 50%;
                    object-fit: cover;
                }
                .text-pink {
                    color: #ff69b4; /* Pink color code */
                }
                .text-blue {
                    color: #007bff; /* Blue color code */
                }
                .btn-black {
                    background-color: #000;
                    color: #fff;
                }
                .btn-black:hover {
                    background-color: #333; /* Change color on hover */
                    color : white; 
                }
            </style>
            <!-- Place your additional CSS links here -->
            <!-- Example: <link href="path/to/your/stylesheet.css" rel="stylesheet"> -->
        
            <!-- **************************************Middle content***************************  -->
            <div class="content "  >
                <div class="container mb-4" >
                    <div class="container">
                        <div class="main-body">
                            <div class="container ">
                                <div class="row gutters-sm">
                                   <div class="col-md-4 mb-3">
           <div class="card">
    <div class="card-body">
        <div class="d-flex flex-column align-items-center text-center">
            <img src="{{ asset('userImages/' ~ app.user.image) }}" alt="{{ app.user.firstname }}" class="rounded-circle" width="150">
            <div class="mt-3">
                <h4>{{ app.user.firstname }} {{ app.user.lastname }}</h4>
                <p class="text-secondary mb-1">Role: <span class="text-success">{{ app.user.role }}</span></p>
                <p class="text-muted font-size-sm">Creation Date: {{ app.user.creationDate|date('Y-m-d') }}</p>
                 <a class="btn btn-black" href="{{ path('app_logout') }}">Logout</a>

                
                 <a href="{{ path('user_delete', {'id': app.user.id}) }}" class="btn btn-danger" onclick="confirmDelete(event)">Delete</a>
                {% if app.user.role == 'Admin' %}
                    <a class="btn btn-success mt-3" href="{{ path('admin_dashboard') }}">Admin Dashboard</a>
                {% else %}
                    {% if app.user.role == 'Player' %}
                        <a class="btn btn-success mt-3" href="{{ path('app_home') }}">Return Home</a>
                    {% endif %}
                    {% if app.user.role == 'FieldOwner' %}
                        <a class="btn btn-success mt-3 " href="{{ path('app_dashboard') }}">Return Home</a>
                    {% endif %}
                {% endif %}
               
            </div>
        </div>
    </div>
</div>

          
        </div>
        <div class="col-md-8">
            <div class="card mb-3">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Full Name</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            {{ app.user.firstname }} {{ app.user.lastname }}
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Email</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            {{ app.user.email }}
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Phone</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            {{ app.user.phoneNumber }}
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Location</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            {{ app.user.location }}
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                             <h6 class="mb-0">Gender</h6>
                        </div>
                         <div class="col-sm-9">
                         {% if app.user.gender == 'Female' %}
                         <span class="text-pink">{{ app.user.gender }}</span>
                         {% elseif app.user.gender == 'Male' %}
                       <span class="text-blue">{{ app.user.gender }}</span>
                         {% else %}
                     {{ app.user.gender }}
                         {% endif %}
    </div>
</div>

                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Birth Date</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            {{ app.user.birthDate|date('Y-m-d') }}
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-12">
                            <a href="{{ path('app_user_edit', {'id': app.user.id}) }}" class="btn btn-info">Edit</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row gutters-sm">
                <div class="col-sm-6 mb-3">
                    <div class="card h-100">
                        <div class="card-body">
                            <h6 class="d-flex align-items-center mb-3"><i class="material-icons text-info mr-2">Password</i></h6>
                            <hr>
                            <div class="row">
                                <div class="col-sm-9 text-secondary">
                                    ********
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12 mt-3">
                                    <a href="{{ path('app_user_passchange', {'id': app.user.id}) }}" class="btn btn-info">Reset Password</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 mb-3">
    <div class="card h-100">
        <div class="card-body">
            <h6 class="d-flex align-items-center mb-3"><i class="material-icons text-info mr-2">Account Status</i></h6>
            <hr>
            {% set status = app.user.status %}
            <small style="font-weight: bold; font-size: larger;">
                {% if status == 'Active' %} 
                    <i class="fas fa-check-circle text-success mr-2"></i> <!-- Success icon -->
                {% elseif status == 'Banned' %}
                    <i class="fas fa-ban text-danger mr-2"></i> <!-- Ban icon -->
                {% else %}
                    <i class="fas fa-exclamation-circle text-warning mr-2"></i> <!-- Default icon -->
                {% endif %}
                 <span style="{% if status == 'Active' %} color: green; {% elseif status == 'Banned' %} color: red; {% else %} color: yellow; {% endif %}">
                    {{ status }}
                </span>
            </small>
           
        </div>
    </div>
</div>

            </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Place any additional scripts here -->
            <!-- Example: <script src="path/to/your/script.js"></script> -->
            <script>
                function confirmDelete(event) {
                    event.preventDefault(); // Prevent the default action (i.e., following the link)
                    // Display a confirmation dialog
                    if (window.confirm('Are you sure you want to delete this account?')) {
                        // If the user confirms, proceed with the deletion
                        window.location.href = event.target.href; // Redirect to the delete route
                    } else {
                        // If the user cancels, do nothing
                        return false;
                    }
                }
            </script>
       
    {% endblock %}


