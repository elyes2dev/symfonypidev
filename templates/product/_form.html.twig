<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            {{ form_start(form, {'attr': {

                'class': 'form',
                
                
                }}) }}
                <div class="form-group">
                    {{ form_label(form.name, 'Name', {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}

                    {% if form_errors(form.name) %}
                        <div class="alert alert-danger">{{ form_errors(form.name) }}</div>
                    {% endif %}
                </div>
                <div class="form-group">
                    {{ form_label(form.reference, 'Reference', {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(form.reference, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.price, 'Price', {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(form.price, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.type, 'Type', {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.quantitystock, 'Quantity in Stock', {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(form.quantitystock, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.image, 'Product Image', {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(form.image) }}
                </div>
                <button type="submit" class="btn btn-success">{{ button_label|default('Save') }}</button>
            {{ form_end(form) }}
        </div>
    </div>
</div>


