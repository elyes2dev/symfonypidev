
{% extends 'dashboard/dashboard.html.twig' %}

{% block content %}

{% block title %}
   <div class="content">
   <h1 style="position:relative;
        top:-120px; right:92px;  ">All Events</h1>
   <div class="bloc">
   

  
          <table class="table" style="position:relative;
        top:99px; right:600px; ">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Description</th>
                    <th>Creation Date</th>
                    <th>Update Date</th>
                    <th>Etat</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for task in tasks %}
                    <tr>
                        <td>{{ task.id }}</td>
                        <td>{{ task.Description }}</td>
                        <td>{{ task.CreationDate ? task.CreationDate.format('Y-m-d') : '' }}</td>
                        <td>{{ task.getUpdatedDate() ? task.getUpdatedDate().format('Y-m-d') : '' }}</td>
                        <td>{{ task.etat }}</td>
                        <td>
                            <a href="{{ path('app_task_edit', {'id': task.id}) }}" class="btn-link add-event-btn">edit</a>
                            {{ include('task_event/_delete_form.html.twig', {'taskEvent': task}) }}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
   

 
</div>

    </div>
{% endblock %}
{% endblock %}
  

   
   


