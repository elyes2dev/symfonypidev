<script>
    function addToCart(productName, productPrice) {
        // You can customize the SweetAlert message here
        Swal.fire({
            icon: 'success',
            title: 'Item Added to Cart',
            text: productName + ' added to your cart. Price: $' + productPrice,
            showConfirmButton: false,
            timer: 1500
        });
        
        // Here you can add your logic to actually add the product to the cart
        // For now, let's just log the product name and price
        console.log('Added to cart:', productName, 'Price:', productPrice);
    }
</script>



