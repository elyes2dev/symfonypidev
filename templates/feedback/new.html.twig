{% extends 'home/home.html.twig' %}

{% block m %}

    <style>
        form {
            display: flex;
            flex-direction: column;
            margin-top: 50px;
            unicode-bidi: isolate;
            margin-block-end: 1em;
            width: 700px; /* Optional: Set a max width for better control */
            margin-left: 140px;
            max-width: 500px; /* Optional: Further control on max width */
        }
        textarea {
            width: 500px; /* Full width inputs */
            padding: 3px;
            font-size: 20px;
            margin: 5px 0;
            box-sizing: border-box; /* Includes padding and border in width */
            margin-top: 10px;
            margin-bottom: 30px;
        }
        input{
            width: 400px; /* Full width inputs */
            padding: 3px;
            font-size: 20px;
            margin: 5px 0;
            box-sizing: border-box; /* Includes padding and border in width */
        }

        label {
            cursor: default;
            color: #0fa563; /* Light green color */
            font-family: 'Lato', sans-serif; /* Using a Google Font for better appearance */
            font-size: 16px; /* Larger font size */
            font-weight: bold; /* Bold font style */
            margin-top: 5px;
        }
        .submit-button {
            background-color: #4CAF50; /* Green background */
            color: white;
            padding: 15px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

    </style>
    <div style="
            height: 100%;
            width: 100%;
            ">
        <div class="how-it-works">
            <span style="margin-left: -40px">Add New Feedback</span>
        </div>
    </div>
    <div class="black-div" style="top: 600px;height: 730px; ">

    {{ include('feedback/_form.html.twig') }}

    </div>
{% endblock %}
